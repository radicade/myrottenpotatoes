-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => th_hilite?("title_header")}= link_to 'Movie Title', movies_path(:id=>"title_header"), {id:"title_header"}
      %th Rating
      %th{:class => th_hilite?("release_date_header")}= link_to 'Release Date', movies_path(:id=>"release_date_header"), {id:"release_date_header"}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
